
<div class="card-columns">
  <% @projects.each do |project| %>
    <div class="card flex">
    <%= image_tag project.image, class: "gallery--image" %>
        <p class="my-1"><%= project.description %></p>
        <%= link_to "View Image", project_path(project.id), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<div class="s12 m12 lg12">
 <%= will_paginate @projects,renderer: BootstrapPagination::Rails %> </div>
    



